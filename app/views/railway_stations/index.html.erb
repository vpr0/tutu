<p id="notice"><%= notice %></p>

<h1>Railway Stations</h1>

<table border="2">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railway_stations.each do |railway_station| %>
      <tr>
        <td><%= railway_station.title %></td>
        <td><%= link_to 'Инфо', railway_station %></td>
        <td><%= link_to 'Изменить', edit_railway_station_path(railway_station) %></td>
        <td><%= link_to 'Удалить', railway_station, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая станция', new_railway_station_path %>
